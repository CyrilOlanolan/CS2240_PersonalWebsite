<!-- BREADCRUMB -->
<div class="container mt-2 mb-4">
    <div aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/subjects">Subjects</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Subject</li>
        </ol>
    </div>
</div>

<!-- UPDATE STUDENT FORM -->
<div class="container">
    <form action="/subjects/update_subject/{{this.subjectID}}" method="POST" class="needs-validation" id="updating">
        <div class="row">
    <div class="col-8">
        <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="subjectTitle" value="{{this.subjectTitle}}" placeholder="Subject Title" name="subjectTitle" required>
                    <label for="subjectTitle">Subject Title</label>
                </div>
            </div>
            <div class="col">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="subjectNo" value="{{this.subjectNo}}" placeholder="Subject No" name="subjectNo" required>
                    <label for="subjectNo">Subject No</label>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="transcriptLoad" value="{{this.transcriptLoad}}" placeholder="Transcript Load" name="transcriptLoad" required>
                    <label for="transcriptLoad">Transcript Load</label>
                </div>
            </div>
            <div class="col">
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="payingLoad" value="{{this.payingLoad}}" placeholder="Paying Load" name="payingLoad" required>
                    <label for="payingLoad">Paying Load</label>
                </div>
            </div>
            <div class="col">
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="teachingLoad" value="{{this.teachingLoad}}" placeholder="Teaching Load" name="teachingLoad" required>
                    <label for="teachingLoad">Teaching Load</label>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3 py-3 w-100">Submit</button>
    </form>
</div>