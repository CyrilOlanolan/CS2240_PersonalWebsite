<!-- BREADCRUMB -->
<div class="container mt-5 mb-4">
    <div aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/teachers">Teachers</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit Teacher</li>
        </ol>
    </div>
</div>

<!-- UPDATE STUDENT FORM -->
<div class="container">
    <!-- ALERT -->
    {{#if alert}}
    <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        <strong>{{alert}}</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    {{#each rows}}
    <form action="/teachers/update_teacher/{{this.teacherID}}" method="POST" class="needs-validation" id="updating">
        {{> teacher_form}}
    </form>
    {{/each}}
    
</div>